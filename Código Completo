		typeText(PINK "Resposta Correta!\n" RESET, 10);
		resultado++ ;
	}
	
	else if(r2 != 3){
		system("cls");
		typeText(RED "Resposta Errada.\nPreste atenção. O destino do Mundo depende disso!\n\n"RESET, 10);
	}
	
	printf(YELLOW "3) Qual é o nome do clássico entre Remo e Paysandu?\n 1-Clássico Amazônico\n 2-Clássico dos Campeões\n 3-Clássico Paraense\n 4-Re-Pa\n\n" RESET);	
	scanf("%d", &r3);
