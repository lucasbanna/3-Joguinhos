	if(r3 == 4){
		system("cls");
		typeText(PINK "Resposta Correta!\n" RESET, 10);
		resultado++ ;
	}

	else if(r3 != 4){
		system("cls");
		typeText(RED "Resposta Errada.\nPreste atenção. O destino do Mundo depende disso!\n\n"RESET, 10);
	}
	
	printf(YELLOW "4) Qual foi o primeiro clube paraense a disputar a Série A do Campeonato Brasileiro?\n 1-Remo \n 2-Paysandu\n 3-Tuna Luso\n 4-Cametá Sport Clube\n" RESET);	
	scanf("%d", &r4);
	fflush(stdin);
	
