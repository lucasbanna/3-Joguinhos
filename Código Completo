    return menu();
}

int menu() {
    int opcao;
    do {
    	system ("cls");
    	typeText(CYAN "==============================\n" RESET, 10);
        typeText("\tMENU PRINCIPAL\n", 50);
        typeText(CYAN "==============================\n" RESET, 10);
        typeText(YELLOW " 1 - " RESET PINK "CAVALO CELESTIAL BUDISTA\n"RESET, 20);
        typeText(YELLOW " 2 - " RESET BROWN "COBRA NA CAIXA\n" RESET, 20);
        typeText(YELLOW " 3 - " RESET BLUE "GRIMÓRIOS "RESET YELLOW"E"RESET RED" PERGAMINHOS\n"RESET, 20);
        typeText(YELLOW " 4 -" RESET " SAIR\n", 20);
        typeText(CYAN "==============================\n" RESET, 10);
        typeText(YELLOW " Escolha uma opção: "RESET, 100);
        scanf("%d", &opcao);
		fflush(stdin);		
				
        switch (opcao) {
            case 1:
                jogo1();
                break;
            case 2:
                jogo2();
                break;
            case 3:
                jogo3();
                break;
            case 4:
                printf("Saindo...\n");
                return 0;
            default:
                printf("Opção inválida. Tente novamente.\n");
        }
    } while (opcao != 4);
    return 0;
}

int menu1() {
    int opcao;
    do {
    	system("cls");
    	typeText(PURPLE"==============================\n" RESET, 10);
    	typeText(PINK"   CAVALO CELESTIAL BUDISTA\n" RESET, 50);
        typeText(PURPLE"==============================\n" RESET, 10);
		typeText(" 1 - Começar \n", 20);
        typeText(" 2 - História \n", 20);
        typeText(" 3 - Sair\n", 20);
  		typeText(PURPLE"==============================\n" RESET, 10);
        typeText(YELLOW " Escolha uma opção: " RESET, 100);
        scanf("%d", &opcao);

        switch (opcao) {
            case 1:
                ccb();
                break;
            case 2:
				lore1();
                break;
            case 3:
                printf("Saindo...\n");
                return 0;
            default:
                printf("Opção inválida. Tente novamente.\n");
        }
    } while (opcao != 3);
    return 0;
}



int menu3 (){
	
	int opcao;
    do {
    	system("cls");
    	typeText(BEGE "=========================\n" RESET, 10);
        typeText(BLUE " GRIMÓRIOS " RESET YELLOW"& " RESET RED "PERGAMINHOS\n" RESET, 50);
        typeText(BEGE "=========================\n" RESET, 10);
		typeText(" 1 - Iniciar Batalha \n", 20);
        typeText(" 2 - Como Jogar \n", 20);
        typeText(" 3 - História \n", 20);
        typeText(" 4 - Sair\n", 20);
  		typeText(BEGE "=========================\n" RESET, 10);
        typeText(YELLOW " Escolha uma opção: " RESET, 100);
        scanf("%d", &opcao);
        fflush(stdin);

		if (opcao == 1 || opcao == 2 || opcao == 3 || opcao == 4){
		
        	switch (opcao) {
        		    case 1:
        		        gp();
        	        break;
        		    case 2:
        		        tutorial3();
        	        break;
        		    case 3:
        		        lore3();
        	        break;
        		    case 4:
        		        printf("Saindo...\n");
        		        return 0;
        		    default:
        		       	system("cls");
        		        printf("Opção inválida. Tente novamente.\n");
        	}
		}
 	   else if (opcao != (opcao >=1 && opcao <= 4 )){ 
			printf(YELLOW "Opção inválida. Insira qualquer valor inteiro para continuar.\n" RESET);
			scanf("%d", &lixo);
			continue;
		}
        
    } while (opcao != 4);
    return 0;
	
	
	
}




