#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <locale.h>

#define RESET   "\x1B[0m"
#define RED     "\x1B[31m"
#define BLUE    "\x1B[34m"
#define CYAN 	"\e[0;96m"
#define MAGENTA "\x1B[35m"
#define BEGE 	"\033[38;5;138m"
#define YELLOW  "\x1B[33m"
#define PURPLE 	"\033[38;5;55m"
#define PINK 	"\033[38;2;241;7;138m"
#define BROWN	"\033[38;2;101;67;33m"

void typeText(const char *text, int delay) {												
    while (*text) {
        putchar(*text++);
        fflush(stdout);  // Garante que o texto apareça imediatamente
        usleep(delay * 1000);  // Converte milissegundos para microssegundos
    }
}



int menu() {
    int opcao;
    do {
    	system ("cls");
    	typeText(CYAN "==============================\n" RESET, 10);
        typeText("\tMENU PRINCIPAL\n", 50);
        typeText(CYAN "==============================\n" RESET, 10);
        typeText(YELLOW " 1 - " RESET PINK "CAVALO CELESTIAL BUDISTA\n"RESET, 20);
        typeText(YELLOW " 2 - " RESET BROWN "COBRA NA CAIXA\n" RESET, 20);
        typeText(YELLOW " 3 - " RESET BLUE "GRIMÓRIOS "RESET YELLOW"E"RESET RED" PERGAMINHOS\n"RESET, 20);
        typeText(YELLOW " 4 -" RESET " SAIR\n", 20);
        typeText(CYAN "==============================\n" RESET, 10);
        typeText(YELLOW " Escolha uma opção: "RESET);
        scanf("%d", &opcao);
		fflush(stdin);		
				
        switch (opcao) {
            case 1:
                jogo1();
                break;
            case 2:
                jogo2();
                break;
            case 3:
                jogo3();
                break;
            case 4:
                printf("Saindo...\n");
                return 0;
            default:
                printf("Opção inválida. Tente novamente.\n");
        }
    } while (opcao != 4);
    return 0;
}
