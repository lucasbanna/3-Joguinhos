#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <locale.h>

#define RESET   "\x1B[0m"
#define RED     "\x1B[31m"
#define BLUE    "\x1B[34m"
#define CYAN 	"\e[0;96m"
#define MAGENTA "\x1B[35m"
#define BEGE 	"\033[38;5;138m"
#define YELLOW  "\x1B[33m"
#define PURPLE 	"\033[38;5;55m"
#define PINK 	"\033[38;2;241;7;138m"

void typeText(const char *text, int delay) {												
    while (*text) {
        putchar(*text++);
        fflush(stdout);  // Garante que o texto apareça imediatamente
        usleep(delay * 1000);  // Converte milissegundos para microssegundos
    }
}

int ccb();
int menu1();
int lore1();
int cont;


int main() {

	setlocale(LC_ALL,"");
	return menu1();
		
}

int menu1() {
    int opcao;
    do {
    	system("cls");
    	typeText(PURPLE"==============================" RESET, 10);
        typeText(PINK"\nCAVALO CELESTIAL BUDISTA\n" RESET, 50);
        typeText("1 - Começar \n", 20);
        typeText("2 - História \n", 20);
        typeText("3 - Sair\n", 20);
  		typeText(PURPLE"==============================\n" RESET, 10);
        typeText(YELLOW "Escolha uma opção: " RESET, 100);
        scanf("%d", &opcao);

        switch (opcao) {
            case 1:
                ccb();
                break;
            case 2:
				lore1();
                break;
            case 3:
                printf("Saindo...\n");
                return 0;
            default:
                printf("Opção inválida. Tente novamente.\n");
        }
    } while (opcao != 3);
    return 0;
}


int lore1(){
	system("cls");
	typeText(YELLOW"O mundo está sob grave risco.\nO"RESET PINK" Cavalo Celestial Budista"RESET YELLOW" abandonou seus estudos e fugiu de "RESET BLUE"Dundee"RESET YELLOW", seu planeta natal, para se aventurar pela Terra.\nComo retaliação, o "RESET RED"Imperador Supremo Unicórnio Dragão Universal"RESET YELLOW" mandou a"RESET RED" Mega Frota interestelar"RESET YELLOW" entrar em posição para\nexplodir o planeta. A única esperança da humanidade está no"RESET PINK" Cavalo Celestial Budista"RESET YELLOW", que deve provar suas capacidades \nintelectuais passando em uma prova com cinco questões objetivas sobre o " RESET "futebol paraense. "YELLOW" \nVocê, mero humano, foi encarregado de ajudar ele nessa missão.\nInsira qualquer valor para voltar ao menu.\n" RESET, 25);
	scanf("%d", &cont);
	fflush(stdin);
	
	
	
	
}


















int ccb (){
	
